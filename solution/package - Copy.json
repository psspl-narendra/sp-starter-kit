{
  "name": "sp-starter-kit",
  "version": "1.4.0",
  "private": true,
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "serve": "cross-env NODE_OPTIONS=--max_old_space_size=8192 gulp serve",
