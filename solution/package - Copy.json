    "bundle:dev": "cross-env NODE_OPTIONS=--max_old_space_size=8192 gulp bundle",
    "bundle:prod": "cross-env NODE_OPTIONS=--max_old_space_size=8192 gulp bundle --ship",
    "clean": "gulp clean",
    "test": "gulp test"
  },
  "dependencies": {
